{
  "name": "specter-figma",
  "description": "A Figma plugin for easily specâ€™ing design system elements.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linkedinlabs/specter-figma.git"
  },
  "scripts": {
    "prewatch": "npm run genmanifest",
    "prebuild": "npm run genmanifest",
    "build": "npx webpack --mode=production",
    "build:public": "npm run genmanifest && npx webpack --env.featureset=public --mode=production",
    "build:internal": "npm run genmanifest && npx webpack --env.featureset=internal --mode=production",
    "watch": "npx webpack --mode=development --watch",
    "watch:public": "npm run genmanifest && npx webpack --env.featureset=public --mode=development --watch",
    "watch:internal": "npm run genmanifest && npx webpack --env.featureset=internal --mode=development --watch",
    "start": "npm run watch",
    "start:public": "npm run watch:public",
    "start:internal": "npm run watch:internal",
    "genmanifest": "cp manifest.example.json manifest.json && plugin_id=$(cat '.plugin-id') && sed -i.tmp s/PLUGIN_ID/$plugin_id/ manifest.json && sed -i.tmp 's/PLUGIN_NAME/Specter/' manifest.json && rm manifest.json.tmp",
    "postinstall": "npm run build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:eslint": "eslint . --ext .js,.tsx,.ts,.svelte",
    "lint:stylelint": "stylelint './src/assets/css/**/*.scss'",
    "lint:js": "npm run lint:eslint",
    "lint:css": "npm run lint:stylelint",
    "lint:staged": "lint-staged",
    "genbeta": "rsync -a src/ ../beta-specter-figma/src && npm run build --prefix ../beta-specter-figma"
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,svelte}": "eslint",
    "*.{css,scss}": "stylelint"
  },
  "pre-commit": "lint:staged",
  "devDependencies": {
    "@figma/plugin-typings": "^1.19.0",
    "@pyoner/svelte-ts-preprocess": "^1.3.0",
    "@pyoner/svelte-types": "^3.4.4-2",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "bourbon": "^6.0.0",
    "css-loader": "^5.2.4",
    "dotenv-webpack": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsdoc": "^4.8.4",
    "eslint-plugin-svelte3": "^2.7.3",
    "html-loader": "^1.3.2",
    "html-webpack-inline-source-plugin": "^1.0.0-beta.2",
    "html-webpack-plugin": "^4.5.2",
    "lint-staged": "^11.0.0",
    "node-sass": "^5.0.0",
    "pre-commit": "^1.2.2",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "svelte-loader": "^2.13.6",
    "ts-loader": "^8.2.0",
    "typescript": "^4.2.3",
    "url-loader": "^2.3.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "hex-rgb": "^4.1.0",
    "svelte": "^3.24.1",
    "uuid-random": "^1.3.2"
  },
  "author": "Grant Blakeman <gblakeman@linkedin.com>"
}
